<Window x:Class="Metro2033WpfClient.Info"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Info" Height="320" Width="450" ResizeMode="NoResize" WindowStartupLocation="CenterOwner">
    <Grid>
        <Image Height="272" Margin="10,10,0,0" Width="130" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <Label x:Name="label1" Content="Produktname" Margin="145,10,0,0" VerticalAlignment="Top" FontSize="18" FontWeight="Bold" HorizontalAlignment="Left"/>
        <Button Content="Ok" Margin="0,0,10,10" Width="75" Click="CloseInfo" HorizontalAlignment="Right" VerticalAlignment="Bottom" IsCancel="True" IsDefault="True"/>
        <Label x:Name="label2" Content="Version" Margin="145,49,0,0" VerticalAlignment="Top" HorizontalAlignment="Left"/>
        <Label x:Name="label3" Content="Copyright" Margin="145,80,0,0" VerticalAlignment="Top" HorizontalAlignment="Left"/>
        <Label x:Name="label4" Content="Firmenname" Margin="145,111,0,0" VerticalAlignment="Top" HorizontalAlignment="Left"/>
        <TextBox x:Name="textbox1" Height="113" Margin="145,142,10,38" TextWrapping="Wrap" Text="Beschreibung" Width="289" IsReadOnly="True"/>

    </Grid>
</Window>
