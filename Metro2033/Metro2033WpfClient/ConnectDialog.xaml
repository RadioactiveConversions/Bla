<Window x:Class="Metro2033WpfClient.ConnectDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Verbinde mit" Height="145" Width="190" WindowStartupLocation="CenterOwner" ResizeMode="NoResize">
    <Grid>
        <Button Content="Abbrechen" HorizontalAlignment="Right" Margin="0,0,10,10" VerticalAlignment="Bottom" Width="75" VerticalContentAlignment="Center" IsCancel="True"/>
        <Button Content="Verbinden" HorizontalAlignment="Left" Margin="10,0,0,10" VerticalAlignment="Bottom" Width="75" IsDefault="True" Click="Connect"/>
        <Label Content="IP:" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <Label Content="Port:" HorizontalAlignment="Left" Margin="10,41,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtip" HorizontalAlignment="Right" Height="23" Margin="0,12,10,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Text="127.0.0.1"/>
        <TextBox x:Name="txtport" HorizontalAlignment="Right" Height="23" Margin="0,43,10,0" TextWrapping="Wrap" Text="1337" VerticalAlignment="Top" Width="120"/>

    </Grid>
</Window>
